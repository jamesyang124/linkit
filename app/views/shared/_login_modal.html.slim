/ login modal
#loginModal.modal.fade [aria-hidden="true" role="dialog" tabindex="-1"]
  .modal-dialog
    .modal-content
      .modal-header
        button.close [aria-hidden="true" data-dismiss="modal" type="button"] Ã—
        h2.text-center
          img.img-circle src="assets/u100.png"
          br/
          | Login
          br/
      .modal-body
        .col-md-12.center-block#session_message
        = bootstrap_form_for :user, url: user_session_path, html: {class: "form col-md-12 center-block"}, remote: true do |f|
          .form-group
            = f.text_field :email, placeholder: "Email", class: "form-control input-lg", hide_label: true
          .form-group
            = f.password_field :password, placeholder: "Password", class: "form-control input-lg", hide_label: true
          .form-group
            = f.submit "Login", class: "btn btn-success btn-lg btn-block"
        = bootstrap_form_tag url: user_omniauth_authorize_path(:facebook), html: {class: "form col-md-12 center-block"} do |f|
          .form-group
            = f.submit "via Facebook", class: "btn btn-primary btn-lg btn-block"
          .form-group
            button.btn.btn-lg.btn-block [aria-hidden="true" data-dismiss="modal"] Cancel
      .modal-footer